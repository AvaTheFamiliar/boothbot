{
  "name": "boothbot",
  "version": "0.1.0",
  "description": "Multi-tenant Telegram bot SaaS for crypto conference lead capture",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "start": "bun run dist/index.js",
    "typecheck": "tsc --noEmit",
    "web:dev": "cd web && bun run dev",
    "web:build": "cd web && bun run build"
  },
  "dependencies": {
    "hono": "^4.7.8",
    "grammy": "^1.34.0",
    "@supabase/supabase-js": "^2.47.10",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "qrcode": "^1.5.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^20.17.9",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/qrcode": "^1.5.5",
    "typescript": "^5.7.2",
    "bun-types": "latest"
  }
}
